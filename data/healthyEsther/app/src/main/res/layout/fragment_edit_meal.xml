<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.robwilliamson.healthyesther.fragment.edit.EditMealFragment"
    android:orientation="vertical"
    style="@style/AppTheme.contentLayout">

    <LinearLayout
        android:orientation="vertical"
        style="@style/AppTheme.sectionLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/dish"
            android:id="@+id/meal_name_title" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/meal_name"
            android:inputType="text|textCapSentences|textAutoComplete|textAutoCorrect"
            android:hint="@string/descriptive_name_for_the_dish"
            android:singleLine="true"
            android:completionThreshold="1"
            android:textIsSelectable="false" />

    </LinearLayout>

</LinearLayout>
