<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.robwilliamson.healthyesther.fragment.edit.EditEventFragment"
    android:id="@+id/edit_event_layout"
    android:orientation="vertical"
    style="@style/AppTheme.contentLayout">

    <LinearLayout
        android:orientation="vertical"
        style="@style/AppTheme.sectionLayout">

        <TextView
            android:text="@string/when"
            style="@style/AppTheme.text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:id="@+id/edit_event_time_button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edit_event_date_button" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        style="@style/AppTheme.sectionLayout">

        <TextView
            android:text="@string/event_title"
            style="@style/AppTheme.text"/>

        <AutoCompleteTextView
            android:id="@+id/edit_event_name"
            android:hint="@string/event_title"
            style="@style/AppTheme.text.textEditor"/>

    </LinearLayout>

</LinearLayout>

