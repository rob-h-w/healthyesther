<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.robwilliamson.healthyesther.fragment.edit.EditEventFragment"
    android:id="@+id/edit_event_layout"
    android:orientation="vertical"
    style="@style/AppTheme.contentLayout">

    <LinearLayout
        android:orientation="horizontal"
        style="@style/AppTheme.sectionLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_event_name"
            android:layout_gravity="center_vertical" />

        <SearchView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_event_name"
            android:inputType="text|textAutoComplete|textAutoCorrect"
            android:queryHint="@string/enter_event_name"
            android:gravity="fill_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        style="@style/AppTheme.sectionLayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/when"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_event_time_button" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_event_date_button" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

