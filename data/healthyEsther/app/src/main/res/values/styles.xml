<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="AppTheme.rootLayout">
        <item name="android:background">@drawable/background</item>
        <item name="android:padding">0dip</item>
    </style>

    <style name="AppTheme.contentLayout">
        <item name="android:background">@drawable/content_background</item>
        <item name="android:padding">@dimen/content_layout_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.sectionLayout">
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">@dimen/section_layout_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.text"></style>

    <style name="AppTheme.text.title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
