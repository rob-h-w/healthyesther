<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.contentLayout"
    android:orientation="vertical"
    tools:context="com.robwilliamson.healthyesther.fragment.edit.EditMedicationFragment">

    <LinearLayout
        style="@style/AppTheme.sectionLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medication_name_title"
            style="@style/AppTheme.text"
            android:text="@string/medication" />

        <AutoCompleteTextView
            android:id="@+id/medication_name"
            style="@style/AppTheme.text.textEditor"
            android:hint="@string/enter_medication_name" />

    </LinearLayout>

</LinearLayout>
