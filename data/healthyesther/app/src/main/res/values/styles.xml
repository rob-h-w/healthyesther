<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    </style>

    <style name="AppTheme.rootScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="AppTheme.rootLayout">
        <item name="android:padding">0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.contentLayout">
        <item name="android:background">@drawable/content_background</item>
        <item name="android:padding">@dimen/content_layout_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.contentLayout.clickable">
        <item name="android:background">@drawable/clickable_content_background</item>
    </style>

    <style name="AppTheme.sectionLayout">
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">@dimen/section_layout_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.sectionLayout.clickable">
        <item name="android:background">@drawable/clickable_border</item>
    </style>

    <style name="AppTheme.text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.text.textEditor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textCapSentences|textAutoComplete|textAutoCorrect</item>
        <item name="android:singleLine">true</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:imeOptions">flagNoFullscreen|actionNext</item>
    </style>

    <style name="AppTheme.text.emphasized">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="AppTheme.text.title">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.text.small">
        <item name="android:textSize">5pt</item>
    </style>

</resources>
