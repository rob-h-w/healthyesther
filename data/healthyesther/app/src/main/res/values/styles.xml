<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:buttonStyle">@style/button</item>
    </style>

    <style name="AppTheme.rootScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="AppTheme.rootLayout">
        <item name="android:padding">0dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
    </style>

    <style name="AppTheme.contentLayout">
        <item name="android:background">@drawable/content_background</item>
        <item name="android:padding">@dimen/content_layout_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.contentLayout.clickable">
        <item name="android:background">@drawable/clickable_content_background</item>
    </style>

    <style name="AppTheme.sectionLayout">
        <item name="android:background">@drawable/border</item>
        <item name="android:padding">@dimen/section_layout_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.sectionLayout.clickable">
        <item name="android:background">@drawable/clickable_border</item>
    </style>

    <style name="AppTheme.text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.text.textEditor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">textCapSentences|textAutoComplete|textAutoCorrect</item>
        <item name="android:singleLine">true</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:imeOptions">flagNoFullscreen|actionNext</item>
    </style>

    <style name="AppTheme.text.textEditor.multiline">
        <item name="android:singleLine">false</item>
        <item name="android:inputType">textMultiLine|textCapSentences|textAutoComplete|textAutoCorrect</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="AppTheme.text.emphasized">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="AppTheme.text.title">
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.text.small">
        <item name="android:textSize">5pt</item>
    </style>

    <style name="AppTheme.gradient">
        <item name="android:startColor">@color/gradient_enabled_1</item>
        <item name="android:centerColor">@color/gradient_enabled_2</item>
        <item name="android:endColor">@color/gradient_enabled_1</item>
        <item name="android:angle">135</item>
    </style>

    <style name="AppTheme.gradient.disabled" parent="AppTheme.gradient">
        <item name="android:startColor">@color/gradient_disabled_1</item>
        <item name="android:centerColor">@color/gradient_disabled_2</item>
        <item name="android:endColor">@color/gradient_disabled_1</item>
    </style>

    <style name="AppTheme.gradient.focused" parent="AppTheme.gradient">
        <item name="android:startColor">@color/gradient_focused_1</item>
        <item name="android:centerColor">@color/gradient_focused_2</item>
        <item name="android:endColor">@color/gradient_focused_1</item>
    </style>

    <style name="AppTheme.gradient.pressed" parent="AppTheme.gradient">
        <item name="android:startColor">@color/gradient_pressed_1</item>
        <item name="android:centerColor">@color/gradient_pressed_2</item>
        <item name="android:endColor">@color/gradient_pressed_1</item>
    </style>

    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:shadowColor">@color/button_text_shadow</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="button.corners">
        <item name="android:radius">@dimen/button_corner_radius</item>
    </style>

    <style name="button.stroke">
        <item name="android:color">@color/button_stroke_enabled</item>
        <item name="android:width">@dimen/button_stroke_width</item>
    </style>

    <style name="button.stroke.disabled" parent="button.stroke">
        <item name="android:color">@color/button_stroke_disabled</item>
    </style>

    <style name="button.stroke.focused" parent="button.stroke">
        <item name="android:color">@color/button_stroke_focused</item>
    </style>

    <style name="button.stroke.pressed" parent="button.stroke">
        <item name="android:color">@color/button_stroke_pressed</item>
    </style>

</resources>
