<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>

            <item
                android:drawable="@drawable/button_disabled"
                android:state_enabled="false" />

            <item
                android:drawable="@drawable/button_pressed"
                android:state_pressed="true" />

            <item
                android:drawable="@drawable/button_focused"
                android:state_focused="true" />

            <item
                android:drawable="@drawable/button_focused"
                android:state_hovered="true" />

            <item android:drawable="@drawable/button_enabled" />

        </selector>

    </item>

    <item>

        <shape android:shape="rectangle">

            <gradient
                android:endColor="@color/button_overlay_gradient_1_end"
                android:startColor="@color/button_overlay_gradient_1_start"
                android:type="linear" />

            <corners android:radius="@dimen/button_corner_radius" />

        </shape>

    </item>

    <item>

        <shape android:shape="rectangle">

            <gradient
                android:angle="270"
                android:endColor="@color/button_overlay_gradient_2_end"
                android:startColor="@color/button_overlay_gradient_2_start"
                android:type="linear" />

            <corners android:radius="@dimen/button_corner_radius" />

        </shape>
    </item>
</layer-list>
